{
    "app-id": "io.github.purplehorrorrus.Meridius",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "meridius",
    "build-options": {
        "strip": true,
        "no-debuginfo": true
    },
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--filesystem=xdg-download:create",
        "--filesystem=xdg-music:create",
        "--device=dri",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=com.canonical.AppMenu.Registrar",
        "--own-name=org.mpris.MediaPlayer2.chromium.*"
    ],
    "modules": [
        {
            "name": "meridius",
            "buildsystem": "simple",
            "build-commands": [
                "cp -a ./main /app/",
                "install -Dm755 meridius /app/bin/meridius",
                "install -Dm644 ./main/$FLATPAK_ID.desktop /app/share/applications/$FLATPAK_ID.desktop",
                "install -Dm644 ./main/$FLATPAK_ID.metainfo.xml /app/share/metainfo/$FLATPAK_ID.metainfo.xml",
                "install -Dm644 ./main/builder/icons/linux/256x256.png /app/share/icons/hicolor/256x256/apps/$FLATPAK_ID.png"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/PurpleHorrorRus/Meridius/releases/download/v2.7.6/meridius-2.7.6.tar.gz",
                    "sha256": "048e080233dffe2ff69be1e66026a5bbdc48219e00a0b6a15d1e60caa952bd3d",
                    "dest": "main"
                },
                {
                    "type": "script",
                    "dest-filename": "meridius",
                    "commands": [
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "zypak-wrapper /app/main/meridiusreborn \"$@\""
                    ]
                }
            ]
        }
    ]
}