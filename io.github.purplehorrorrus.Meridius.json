{
    "app-id": "io.github.purplehorrorrus.Meridius",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "meridius",
    "build-options": {
        "strip": true,
        "no-debuginfo": true
    },
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--filesystem=xdg-download:create",
        "--filesystem=xdg-music:create",
        "--device=dri",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=com.canonical.AppMenu.Registrar",
        "--own-name=org.mpris.MediaPlayer2.chromium.*"
    ],
    "modules": [
        {
            "name": "meridius",
            "buildsystem": "simple",
            "build-commands": [
                "cp -a ./main /app/",
                "install -Dm755 meridius /app/bin/meridius",
                "install -Dm644 $FLATPAK_ID.desktop /app/share/applications/$FLATPAK_ID.desktop",
                "install -Dm644 $FLATPAK_ID.metainfo.xml /app/share/metainfo/$FLATPAK_ID.metainfo.xml",
                "install -Dm644 ./main/builder/icons/linux/256x256.png /app/share/icons/hicolor/256x256/apps/$FLATPAK_ID.png"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/PurpleHorrorRus/Meridius/releases/download/v2.7.2/meridius-2.7.2.tar.gz",
                    "sha256": "69d8a4c73da69384ca00673626c98f4d4a16c90c06881ae1bbf1aecb9a9e3ee2",
                    "dest": "main"
                },
                {
                    "type": "file",
                    "url": "https://raw.githubusercontent.com/PurpleHorrorRus/Meridius/master/flatpak/io.github.purplehorrorrus.Meridius.desktop",
                    "sha256": "f61e352117c7f8d3bae4a14ecb55958532de5341ae34d1b7b0f9b13e10c71e36"
                },
                {
                    "type": "file",
                    "url": "https://raw.githubusercontent.com/PurpleHorrorRus/Meridius/master/flatpak/io.github.purplehorrorrus.Meridius.metainfo.xml",
                    "sha256": "73e59ee002f9cd7f94c89db8b608cda7c85b77b02ffad25d05fa0f485dcbfac9"
                },
                {
                    "type": "script",
                    "dest-filename": "meridius",
                    "commands": [
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "zypak-wrapper /app/main/meridiusreborn \"$@\""
                    ]
                }
            ]
        }
    ]
}