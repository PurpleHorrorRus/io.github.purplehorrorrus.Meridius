{
    "app-id": "io.github.purplehorrorrus.Meridius",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "meridius",
    "build-options": {
        "strip": true,
        "no-debuginfo": true
    },
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--filesystem=xdg-download:create",
        "--filesystem=xdg-music:create",
        "--device=dri",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=com.canonical.AppMenu.Registrar",
        "--own-name=org.mpris.MediaPlayer2.chromium.*"
    ],
    "modules": [
        {
            "name": "ffmpeg",
            "sources": [
                {
                    "type": "git",
                    "url": "https://git.ffmpeg.org/ffmpeg.git",
                    "tag": "n5.1.4"
                }
            ],
            "config-opts": [
                "--disable-all",
                "--enable-avcodec",
                "--enable-avformat",
                "--enable-avfilter",
                "--enable-swresample",
                "--enable-libmp3lame",
                "--enable-zlib",
                "--enable-pthreads",
                "--enable-ffmpeg",
                "--enable-protocol=file",
                "--enable-demuxer=concat,mpegts,image2",
                "--enable-muxer=mp3",
                "--enable-encoder=libmp3lame",
                "--enable-decoder=mp3float,mjpeg,png"
            ]
        },
        {
            "name": "meridius",
            "buildsystem": "simple",
            "build-commands": [
                "cp -a ./main /app/",
                "install -Dm755 meridius /app/bin/meridius",
                "install -Dm644 ./main/$FLATPAK_ID.desktop /app/share/applications/$FLATPAK_ID.desktop",
                "install -Dm644 ./main/$FLATPAK_ID.metainfo.xml /app/share/metainfo/$FLATPAK_ID.metainfo.xml",
                "install -Dm644 ./main/builder/icons/linux/256x256.png /app/share/icons/hicolor/256x256/apps/$FLATPAK_ID.png"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/PurpleHorrorRus/Meridius/releases/download/v3.1.1/meridius-3.1.1.tar.gz",
                    "sha256": "88b6d832b24da8ebecb9e42f0b7952dd89ce0705533a8d9359d3ec7e2fb3d7fd",
                    "dest": "main"
                },
                {
                    "type": "script",
                    "dest-filename": "meridius",
                    "commands": [
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "export FFMPEG_BINARY=\"/app/bin/ffmpeg\"",
                        "zypak-wrapper /app/main/meridius \"$@\""
                    ]
                }
            ]
        }
    ]
}
